<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_ROOT" value="logs" />
    <conversionRule conversionWord="mask" converterClass="bisq.common.logging.LogMaskConverter"/>

    <appender name="CONSOLE_APPENDER" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
			<pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
           
        </encoder>
    </appender>

    <!-- Suppress specific verbose loggers in release builds -->
    <logger name="bisq.network.protobuf" level="ERROR"/>
    <logger name="bisq.chat.protobuf" level="ERROR"/>
    <logger name="bisq.offer.protobuf" level="ERROR"/>
    <logger name="bisq.common.protobuf" level="ERROR"/>

    <!-- Suppress performance warnings that aren't critical -->
    <logger name="org.slf4j.helpers.NOPLogger" level="ERROR"/>

    <root level="ERROR">
        <appender-ref ref="CONSOLE_APPENDER"/>
    </root>
</configuration>
        