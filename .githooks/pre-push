#!/bin/bash

# Pre-push hook for Bisq Mobile
# Runs unit tests before allowing push

echo "ğŸ” Running pre-push checks..."
echo ""

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

print_error() {
    echo -e "${RED}âŒ $1${NC}"
}

print_success() {
    echo -e "${GREEN}âœ… $1${NC}"
}

print_warning() {
    echo -e "${YELLOW}âš ï¸  $1${NC}"
}

# ============================================
# 1. RUN UNIT TESTS
# ============================================
echo "ğŸ§ª Running unit tests (androidUnitTest + commonTest)..."
./gradlew testDebugUnitTest -q

if [ $? -ne 0 ]; then
    echo ""
    print_error "Unit tests failed!"
    echo ""
    echo "Some tests are failing. Please fix them before pushing."
    echo ""
    echo "To see details, run:"
    echo "  ./gradlew testDebugUnitTest"
    echo ""
    echo "To view HTML test reports:"
    echo "  open */build/reports/tests/testDebugUnitTest/index.html"
    echo ""
    echo "To skip this check (not recommended):"
    echo "  git push --no-verify"
    echo ""
    exit 1
fi

print_success "All unit tests passed!"
echo ""

# Success!
echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
print_success "All tests passed! ğŸš€"
echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo ""

exit 0
